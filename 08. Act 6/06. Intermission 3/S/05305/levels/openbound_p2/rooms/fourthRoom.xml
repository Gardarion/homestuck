<sburb description="fourth room">

<dependencies>
	<dependency>chars/meulin.xml</dependency>
	<dependency>chars/kurloz.xml</dependency>
</dependencies>

<assets>
	<asset name='fourthRoomBG_0_0' type='graphic'>backgrounds/slices/fourthRoomBG_0_0.htm</asset>
	<asset name='fourthRoomBG_0_1' type='graphic'>backgrounds/slices/fourthRoomBG_0_1.htm</asset>
	<asset name='fourthRoomBG_0_2' type='graphic'>backgrounds/slices/fourthRoomBG_0_2.htm</asset>
	<asset name='fourthRoomBG_0_3' type='graphic'>backgrounds/slices/fourthRoomBG_0_3.htm</asset>
	<asset name='fourthRoomBG_1_0' type='graphic'>backgrounds/slices/fourthRoomBG_1_0.htm</asset>
	<asset name='fourthRoomBG_1_1' type='graphic'>backgrounds/slices/fourthRoomBG_1_1.htm</asset>
	<asset name='fourthRoomBG_1_2' type='graphic'>backgrounds/slices/fourthRoomBG_1_2.htm</asset>
	<asset name='fourthRoomBG_1_3' type='graphic'>backgrounds/slices/fourthRoomBG_1_3.htm</asset>
	
	<asset name='fourthRoomMap' type='graphic'>backgrounds/fourthRoomMap.htm</asset>
	<asset name='gamzee_idle' type='graphic'>dialogs/gamzee/gamzee_idle.htm</asset>
	
	<asset name='obj18' type='graphic'>objects/items/obj18.htm</asset>
	<asset name='obj19' type='graphic'>objects/items/obj19.htm</asset>
</assets>

<hud>
	<dialogsprites>
		<animation name='gamzee_idle' sheet='gamzee_idle' x='-220' y='-420'/>
	</dialogsprites>
</hud>

<sprite depthing='3' name='obj18'>
<animation x='-50' y='-50'  sheet='obj18'/>
</sprite>
<sprite depthing='3' name='obj19'>
<animation x='-50' y='-50'  sheet='obj19'/>
</sprite>

<rooms>
  <room name='fourthRoom' walkableMap='fourthRoomMap' mapScale='2'>
  	<triggers>
			<trigger>
				<args>spriteProperty,char,y&gt;1470</args>
				<action command='goBack'>
					<args>char</args>
					<action class='kurlozTalk8'>
						<action command='removeSprite'>
							<args>thirdRoomDoor,thirdRoom</args>
							<action command='removeUnwalkable' noDelay='true'>
								<args>thirdRoomPost1,thirdRoom</args>
								<action command='removeUnwalkable' noDelay='true'>
									<args>thirdRoomPost2,thirdRoom</args>
									<action class='beMeenah' noDelay='true'/>
								</action>
							</action>
						</action>
					</action>
				</action>
			</trigger>
  	</triggers>
  
  	<sprite class='chest2' name='fourthRoomChest18' x='250' y='240'>
			<action command='openChest' name='Открыть.'>
		  <args>fourthRoomChest18,obj18,
		    @! Теперь у тебя есть РАЗРУШИТЕЛЬ ТАЛИСМАНОВ!
		    @! Это необычайно редкий, опасный и особенно кощунственный предмет. Мысль о разрушении драгоценных талисманов заставляет твою кровь вскипать. Его необходимо тщательно охранять. Ты не можешь позволить ему попасть не в те руки.
		  </args>
		  </action>
  	</sprite>
  	
  	<sprite class='chest2' name='fourthRoomChest19' x='478' y='240'>
			<action command='openChest' name='Открыть.'>
		  <args>fourthRoomChest19,obj19,
		    @! Теперь у тебя есть СУНДУК ДЛЯ ТАЛИСМАНОВ!
		    @! Только херувим может открыть его. Ты бы снова умер от любопытства, задаваясь вопросом, что внутри, вот только на самом деле было бы ересью даже любопытствовать. И ты бы откусил свой собственный язык за такую мысль, если бы ты не сжевал его давным-давно.
		  </args>
		  </action>
  	</sprite>
  
  	<sprite name='fourthRoomBG'>
  		<animation sheet='fourthRoomBG'  sliced='true' colSize='500' rowSize='500' numCols='2' numRows='4'/>
  	</sprite>
  
  </room> 
</rooms>
</sburb>
