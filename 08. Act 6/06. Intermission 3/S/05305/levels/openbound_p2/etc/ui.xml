<sburb description='ui configuration'>

<dependencies>
	<!--<dependency>etc/rebubbleText.xml</dependency>-->
</dependencies>

<assets>
  <asset name='SburbFont' type='font'>
  	local:Courier New Bold, 
  	local:Courier New, 
  	url:fonts/cour.woff, 
  	url:fonts/cour.ttf, 
  	weight:bold
  </asset>
  
  <asset name='preloaderBG' type='graphic'>interface/load.htm</asset>
	<asset name='volumeControl' type='graphic'>interface/volumeControl.htm</asset>
	<asset name='saveControl' type='graphic'>interface/save_icon.htm</asset>
	<asset name='helpControl' type='graphic'>interface/helpControl.htm</asset>

  <asset name='dialogBox' type='graphic'>interface/boxes/dialogBoxBig.htm</asset>
  <asset name='alttextbox_twitter' type='graphic'>interface/boxes/alttextbox_twitter.htm</asset>
  <asset name='hashTagBarSheet' type='graphic'>interface/hashtagbar.htm</asset>
  <asset name='heartButtonSheet' type='graphic'>interface/icons_heart.htm</asset>
  <asset name='spadeButtonSheet' type='graphic'>interface/icons_spade.htm</asset>
  <asset name='bubbleButtonSheet' type='graphic'>interface/icons_bub.htm</asset>
  <asset name='closeButtonSheet' type='graphic'>interface/closeconversation.htm</asset>
  
  <asset name='alttextbox_4chan' type='graphic'>interface/boxes/alttextbox_4chan.htm</asset>
  
 

 
<asset name='dialogimg_cronus1' type='graphic'>interface/backgrounds/dialogimg_cronus1.htm</asset>
<asset name='dialogimg_cronus2' type='graphic'>interface/backgrounds/dialogimg_cronus2.htm</asset>
<asset name='dialogimg_cronus3' type='graphic'>interface/backgrounds/dialogimg_cronus3.htm</asset>
<asset name='dialogimg_cronus4' type='graphic'>interface/backgrounds/dialogimg_cronus4.htm</asset>
<asset name='dialogimg_mituna1' type='graphic'>interface/backgrounds/dialogimg_mituna1.htm</asset>
<asset name='dialogimg_mituna2' type='graphic'>interface/backgrounds/dialogimg_mituna2.htm</asset>
<asset name='dialogimg_mituna3' type='graphic'>interface/backgrounds/dialogimg_mituna3.htm</asset>

<asset name='meenahmeme' type='graphic'>interface/backgrounds/meenahmeme.htm</asset>

</assets>

<sprite name='meenahmeme'>
	<animation sheet='meenahmeme' colSize='253' rowSize='160' length='20' x='244' y='55' frameInterval='2'/>
</sprite>

<hud>
  	<spritebutton name='volumeButton' x='9' y='9' width='54' height='36' sheet='volumeControl'>
  		<action command='toggleVolume' silent='true'></action>
  	</spritebutton>
  	<spritebutton name='helpButton' x='591' y='9' width='54' height='63' sheet='helpControl'>
  		<action command='talk' soft='true'>
  			<args>@! Используйте стрелки или WASD для передвижения и ПРОБЕЛ для взаимодействия.</args>
  		</action>
  	</spritebutton>
  	<spritebutton name='saveButton' x='558' y='18' sheet='saveControl'>
  		<action command='talk' soft='true'>
  			<args>
  			@! Внимание: это экспериментальная функция. Используйте её, только если у вас есть проблемы со стабильностью и если вы хотите сохранить свой прогресс на случай падения приложения. Файлы сохранения стираются при закрытии браузера.
  			</args>
				<action command='saveOrLoad' >
					<args></args>
				</action>
  		</action>
  	</spritebutton>
  	
  	
	<dialoger alertPos="56,120" talkPosRight="20,120" talkPosLeft="90,120" hiddenPos="-1000,120"
		spriteStartLeft="-300,450" spriteEndLeft="100,450" spriteStartRight="950,450" spriteEndRight="550,450"
		alertTextDimensions="30,30,450,220" leftTextDimensions="150,30,350,220" rightTextDimensions="30,30,350,220"
		box="dialogBox" type="social">
	</dialoger>
</hud>

<sprite name='hashTagBar'>
	<animation sheet='hashTagBarSheet'/>
</sprite>

<spritebutton name='spadeButton' x='440' y='300' width='30' height='26' sheet='spadeButtonSheet'>
	<action command='setButtonState' silent='true'>heartButton,0</action>
</spritebutton>

<spritebutton name='heartButton' x='480' y='300' width='30' height='26' sheet='heartButtonSheet'>
	<action command='setButtonState' silent='true'>spadeButton,0</action>
</spritebutton>

<spritebutton name='closeButton' x='220' y='60' width='203' height='37' sheet='closeButtonSheet'>
	<action command='skipDialog' silent='true'> </action>
</spritebutton>

<spritebutton name='bubbleButton' x='510' y='300' width='30' height='26' sheet='bubbleButtonSheet'>
	<!--<action silent='true' soft='true' class='rebubble'/>-->
	<action command='cancel' silent='true' soft='true'/>
</spritebutton>
</sburb>
