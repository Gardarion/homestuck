<sburb description="fourth room">

<dependencies>
	<dependency>fourthRoomDialog.xml</dependency>
</dependencies>

<classes>

</classes>

<assets>
	<asset name='araneaStandSheet' type='graphic'>chars/aranea_expostand.htm</asset>
	<asset name='peanutsSheet' type='graphic'>backgrounds/peanuts.htm</asset>
	<asset name='fourthRoomBG_0_0' type='graphic'>backgrounds/slices/fourthRoomBG_0_0.htm</asset>
	<asset name='fourthRoomBG_0_1' type='graphic'>backgrounds/slices/fourthRoomBG_0_1.htm</asset>
	<asset name='fourthRoomBG_1_0' type='graphic'>backgrounds/slices/fourthRoomBG_1_0.htm</asset>
	<asset name='fourthRoomBG_1_1' type='graphic'>backgrounds/slices/fourthRoomBG_1_1.htm</asset>
	<asset name='fourthRoomFG_0_0' type='graphic'>backgrounds/slices/fourthRoomFG_0_0.htm</asset>
	<asset name='fourthRoomFG_0_1' type='graphic'>backgrounds/slices/fourthRoomFG_0_1.htm</asset>
	<asset name='fourthRoomFG_1_0' type='graphic'>backgrounds/slices/fourthRoomFG_1_0.htm</asset>
	<asset name='fourthRoomFG_1_1' type='graphic'>backgrounds/slices/fourthRoomFG_1_1.htm</asset>
	<asset name='fourthRoomMap' type='graphic'>backgrounds/fourthRoomMap.htm</asset>

	<asset name='spritedHorse' type='graphic'>objects/spiritedhorse.htm</asset>

	<asset name='elevatorstuck' type='audio'>audio/music/ElevatorstuckLoopQuiet.ht;audio/music/ElevatorstuckLoopQuiet.htm</asset>
</assets>

<sprite name='peanuts' depthing='2'>
	<animation sheet='peanutsSheet'/>
</sprite>

<sprite name='endSwitch' x='10' y='0'>
	<animation sheet='araneaStandSheet'/>
</sprite>

<sprite name='secretObj' depthing='2'>
	<animation sheet='spritedHorse' x='-50' y='-50'/>
</sprite>

<sprite class='chest1' name='fourthRoomChest1' x='166' y='498'>
    	<action command='openChest' name='открыть'>
    		<args>fourthRoomChest1,secretObj, @! Теперь у тебя есть КАЛЕНДАРЬ БОЙКИХ ЛОШАДЕЙ ЗА 2010 ГОД!
      @!:#блядская-заноза-в-красных-щёчках Ты переворачиваешь страницы и… мда. Червовый Грабитель всё ещё пасёт этих чёртовых лошадей.</args>
    	</action>
    </sprite>

<rooms>
  <room name='fourthRoom' width='1896' height='1488' walkableMap='fourthRoomMap'>
   	<triggers>
		<trigger>spriteProperty,endSwitch,x=0
			<action class='peanutActions'/>
		</trigger>
		<trigger detonate='true'>spriteProperty,char,y&lt;1236
			<action class='fourthRoomIntro'/>
		</trigger>
		<trigger>spriteProperty,char,x&gt;1808
			<action command='deltaSprite'>
				<args>char,-12,0</args>
				<action command='talk'>
					<args>@! Этот путь ведёт к концу игры. Вы уверенны, что закончили здесь?</args>
					<action command='presentActions'>
						<args>
							<action name='Да' command='fadeOut'>
								<args></args>
								<action command='talk'>
									<args>@! Это конец. Продолжайте играть со следующей страницы.</args>
									<action command='presentActions'>
									 	<args>
										 	<action command='loadStateFile' name='Начать заново'>
													<args>openbound.xml,false</args>
											</action>
										</args>
									</action>
								</action>
							</action>
							<action name='Нет' command='cancel'>
							</action>
						</args>
					</action>
				</action>
			</action>
		</trigger>
		<trigger detonate='true'>spriteProperty,questSwitch,x!=0
			<action command='addSprite'>
				<args>fourthRoomChest1,fourthRoom</args>
			</action>
		</trigger>
	</triggers>
		
	<sprite name='araneaStand' x='1486' y='398' width='100' height='30' collidable='true' depthing='1'>
		<animation sheet='araneaStandSheet' x='-44' y='-100'/>
		<action command='addOverlay' name='Поговорить.'>
			<args>peanuts</args>
			<action class='peanutActions'>
			</action>
		</action>
	</sprite>
   
	<sprite name='fourthRoomBG_0_0' x='0' y='0'><animation sheet='fourthRoomBG_0_0' /></sprite>
	<sprite name='fourthRoomBG_0_1' x='1000' y='0'><animation sheet='fourthRoomBG_0_1' /></sprite>
	<sprite name='fourthRoomBG_1_0' x='0' y='1000'><animation sheet='fourthRoomBG_1_0' /></sprite>
	<sprite name='fourthRoomBG_1_1' x='1000' y='1000'><animation sheet='fourthRoomBG_1_1' /></sprite>

	<sprite name='fourthRoomFG_0_0' x='0' y='0' depthing='2'><animation sheet='fourthRoomFG_0_0' /></sprite>
	<sprite name='fourthRoomFG_0_1' x='1000' y='0' depthing='2'><animation sheet='fourthRoomFG_0_1' /></sprite>
	<sprite name='fourthRoomFG_1_0' x='0' y='1000' depthing='2'><animation sheet='fourthRoomFG_1_0' /></sprite>
	<sprite name='fourthRoomFG_1_1' x='1000' y='1000' depthing='2'><animation sheet='fourthRoomFG_1_1' /></sprite>
  </room>
</rooms>
</sburb>
